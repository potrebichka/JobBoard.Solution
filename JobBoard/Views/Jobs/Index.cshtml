@using JobBoard.Models;

<h1>Job openings</h1>
@if (Model.Count == 0)
{
  <p>There are no job openings in the list.</p>
}
<ul>
  @foreach (JobOpening job in Model)
  {
    <li>
        @job.Title <br>
        @job.Description <br>
        If you are interested in job, contact @job.PostingContact.Name using email @job.PostingContact.Email or call to @job.PostingContact.PhoneNumber
    </li>
  }
</ul>

<a href="/jobs/new">Add a new job posting.</a>